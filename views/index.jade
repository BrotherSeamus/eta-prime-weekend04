extends layout

block content
  header.container
    .row
      h1.col-lg-6 Rando Corp
        small   an HR/Talent firm
    .row
      .col-md-10
      .col-md-2
        a(href='/admin') Admin
  main.container
    form#application
      fieldset
        .row
          legend Applicant Information
        .row
          .col-md-4
            label(for='fName') First Name
            input(type='text' id='fName' name='fName' required autofocus)
          .col-md-4
            label(for='lName') Last Name
            input(type='text' id='lName' name='lName' required)
          .col-md-4
            label(for='desJob') Desired Job
            input(type='text' id='desJob' name='desJob' required)
        .row
          .col-md-6
            h4 Where would you like to work?
        .row
          .col-md-2
            label(for='remote') Remote
            input(type='radio' id='remote' name='desLocus' value='remote' checked)
          .col-md-2
            label(for='specLocus') Specific Location
            input(type='radio' id='specLocus' name='desLocus' value="specLocus")
          .col-md-4
            label(for='appCity') City
            input(type='text' id='appCity' name='appCity')
          .col-md-4
            label(for='appState') State
            input(type='text' id='appState' name='appState')
      fieldset
        .row
          legend Employment History
        .row
          .col-md-6
            h4 Most Recent Job
        .row
          .col-md-3
            label(for='title1') Job Title
            input(type='text' id="title1" name='title1')
          .col-md-3
            label(for='employer1') Employer
            input(type='text' id='employer1' name='employer1')
          .col-md-3
            label(for='cityE1') City
            input(type='text' id='cityE1' name='cityE1')
          .col-md-3
            label(for='stateE1') State
            input(type='text' id='stateE1' name='stateE1')
        .row
          .col-md-6
            label(for='dutiesE1') Job Duties (please separate duties with a semicolon)
            textarea(id='dutiesE1' rows='5' cols='30' name='dutiesE1' form='application')
        .row
          .col-md-6
            h4 Next Most Recent Job
        .row
          .col-md-3
            label(for='title2') Job Title
            input(type='text' id="title2" name='title2')
          .col-md-3
            label(for='employer2') Employer
            input(type='text' id='employer2' name='employer2')
          .col-md-3
            label(for='cityE2') City
            input(type='text' id='cityE2' name='cityE2')
          .col-md-3
            label(for='stateE2') State
            input(type='text' id='stateE2' name='stateE2')
        .row
          .col-md-6
            label(for='dutiesE2') Job Duties (please separate duties with a semicolon)
            textarea(id='dutiesE2' rows='5' cols='30' name='dutiesE2' form='application')
        .row
          .col-md-6
            h4 Next Most Recent Job
        .row
          .col-md-3
            label(for='title3') Job Title
            input(type='text' id="title3" name='title3')
          .col-md-3
            label(for='employer3') Employer
            input(type='text' id='employer3' name='employer3')
          .col-md-3
            label(for='cityE3') City
            input(type='text' id='cityE3' name='cityE3')
          .col-md-3
            label(for='stateE2') State
            input(type='text' id='stateE3' name='stateE3')
        .row
          .col-md-6
            label(for='dutiesE3') Job Duties (please separate duties with a semicolon)
            textarea(id='dutiesE3' rows='5' cols='30' name='dutiesE3' form='application')
        .row
      fieldset
        .row
            legend Skills
        .row
          .col-md-6
            label(for='skills') Skills (please separate skills with a semicolon)
            br
            textarea(id='skills' rows='5' cols='30' name='skills' form='application')
        .row
          .col-md-4
          .col-md-4
            input(type='submit' name='submit')

